<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/away_team_stat"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/away_team_rank"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/review_away_icon"
            android:layout_width="50dp"
            android:layout_height="70dp" />

        <TextView
            android:id="@+id/review_text_away_score"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:textSize="25sp"
            />

        <TextView
            android:id="@+id/review_text_status"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:background="#E2E2E2"
            android:textAlignment="center"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/review_text_home_score"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/review_home_icon"
            android:layout_width="50dp"
            android:layout_height="70dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/home_team_stat"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/home_team_rank"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textSize="12sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="승리투수 : " />

        <TextView
            android:id="@+id/text_winning_pitcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_save_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_saving_pitcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_critical_hit_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_critical_hitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TableLayout
        android:id="@+id/review_table_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_gravity="center"
        >


    </TableLayout>
    <TableLayout
        android:id="@+id/review_table_statistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"

        android:stretchColumns="*">
        <TableRow>
            <TextView
                android:id="@+id/statistics_away_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:textAlignment="textStart"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="V S"
                android:layout_marginEnd="1dp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/statistics_home_team"
                android:textAlignment="textEnd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="1dp"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/statistics_away_hit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="안타"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/statistics_home_hit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/statistics_away_home_run"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="홈런"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/statistics_home_home_run"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/statistics_away_stolen_base"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="도루"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/statistics_home_stolen_base"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/statistics_away_pitcher_strike_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="탈삼진"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/statistics_home_pitcher_strike_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/statistics_away_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="실책"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/statistics_home_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"/>
        </TableRow>

    </TableLayout>
</LinearLayout>