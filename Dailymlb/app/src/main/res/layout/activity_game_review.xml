<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blank"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/away_team_stat"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/away_team_rank"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/review_away_icon"
            android:layout_width="50dp"
            android:layout_height="70dp" />

        <TextView
            android:id="@+id/review_text_away_score"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/review_text_status"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:background="#E2E2E2"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/review_text_home_score"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/review_home_icon"
            android:layout_width="50dp"
            android:layout_height="70dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/home_team_stat"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/home_team_rank"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textSize="12sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_winning_pitcher_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_winning_pitcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_save_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_saving_pitcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_critical_hit_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_critical_hitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <GridView
        android:id="@+id/review_inning_board_grid_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal" />
    <GridView
        android:id="@+id/review_statistics_grid_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:numColumns="3"
        android:scrollbars="vertical"
        />

</LinearLayout>